<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Collab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AccentButton">
        <item name="colorPrimary">@color/blue_accent</item>
    </style>

    <style name="FloatingButton">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="SearchEditText">
        <item name="colorPrimary">@color/grey_divider</item>
    </style>

    <style name="ProfileEditText">
        <item name="colorPrimary">@color/blue_primary</item>
    </style>

    <style name="WarningButton">
        <item name="colorPrimary">@color/warning_red</item>
    </style>

    <style name="Theme.Collab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Collab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Collab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue_accent</item>
    </style>

</resources>