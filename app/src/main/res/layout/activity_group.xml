<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.GroupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/group_tabs"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:elevation="0dp"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/blue_accent"
        app:tabIndicatorColor="@color/blue_accent"
        app:tabIndicator="@drawable/selected_tab_layout"
        app:tabTextAppearance="@style/TabText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/tab_shadow" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/group_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>